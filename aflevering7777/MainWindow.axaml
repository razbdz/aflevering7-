<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    x:Class="aflevering7777.MainWindow"
    Title="Inventory System"
    Width="900" Height="640">

    <Grid RowDefinitions="Auto,*,Auto,Auto,Auto,Auto,*,Auto" Margin="16">
        <StackPanel Orientation="Horizontal" Spacing="12" Grid.Row="0">
            <Button Content="Process Next Order" Command="{Binding ProcessNextOrderCommand}"/>
            <Button Content="Process Order (Robot)" Command="{Binding ProcessOrderRobotCommand}"/>
        </StackPanel>

        <TextBlock Grid.Row="1" Text="Queued Orders" FontSize="20" Margin="0,12,0,6"/>
        <Border Grid.Row="1" Margin="0,42,0,0" Background="#262626" CornerRadius="8" Padding="12">
            <ListBox Items="{Binding QueuedOrders}" />
        </Border>

        <TextBlock Grid.Row="2" Text="Processed Orders" FontSize="20" Margin="0,18,0,6"/>
        <Border Grid.Row="3" Background="#262626" CornerRadius="8" Padding="12">
            <ListBox Items="{Binding ProcessedOrders}" />
        </Border>

        <TextBlock Grid.Row="4" Margin="0,18,0,6" Text="{Binding TotalRevenueText}" FontSize="18" />

        <TextBlock Grid.Row="5" Text="Inventory:" FontSize="18" Margin="0,12,0,6"/>
        <Border Grid.Row="6" Background="#262626" CornerRadius="8" Padding="12">
            <TextBlock Text="{Binding InventoryText}" />
        </Border>

        <Border Grid.Row="7" Background="#111" CornerRadius="8" Padding="12" Margin="0,12,0,0">
            <ScrollViewer>
                <TextBlock Text="{Binding StatusMessages}" FontFamily="Consolas, Menlo, monospace" TextWrapping="Wrap"/>
            </ScrollViewer>
        </Border>
    </Grid>
</Window>