<Window
    xmlns="https://github.com/avaloniaui"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:vm="clr-namespace:aflevering7777"
    x:Class="aflevering7777.MainWindow"
    x:DataType="vm:MainWindowViewModel"
    Title="Item Sorter Robot"
    Width="900" Height="640">

    <ScrollViewer>
        <StackPanel Margin="16" Spacing="12">

            <StackPanel Orientation="Horizontal" Spacing="12">
                <Button Content="Process Next Order" Click="OnProcessNextOrder"/>
                <Button Content="Process Order (Robot)" Click="OnProcessOrderRobot"/>
            </StackPanel>

        
            <TextBlock Text="Queued Orders" FontSize="18"/>
            <ListBox ItemsSource="{Binding QueuedOrders}" Height="120"/>

        
            <TextBlock Text="Processed Orders" FontSize="18"/>
            <ListBox ItemsSource="{Binding ProcessedOrders}" Height="120"/>

   
            <TextBlock Text="{Binding TotalRevenueText}" FontSize="18"/>

        
            <TextBlock Text="Inventory:" FontSize="18"/>
            <Border Background="#262626" CornerRadius="8" Padding="12">
                <TextBlock Text="{Binding InventoryText}"/>
            </Border>

            <Border Background="#114" CornerRadius="8" Padding="12" Height="140">
                <ScrollViewer>
                    <TextBlock Text="{Binding StatusMessages}" FontFamily="Consolas, Menlo, monospace" TextWrapping="Wrap"/>
                </ScrollViewer>
            </Border>

        </StackPanel>
    </ScrollViewer>
</Window>
